<!doctype html>
<html lang=en>
<meta charset=utf8>
<meta name=viewport content=width=device-width,initial-scale=1>
<link rel="shortcut icon" type=image/x-icon href=data:image/x-icon;,>
<title>Shelter</title>
<link rel=stylesheet href=/index.css>
<main>
  <h1>Add animal</h1>
  <form action="/" method="POST">
    <label>Name
      <input type="text" name="name">
    </label>

    <label> Type of animal
      <select name="type">
        <option value="dog">Dog</option>
        <option value="cat">Cat</option>
        <option value="rabbit">Rabbit</option>
      </select>
    </label>

    <label>
      Age
      <input type="number" name="age">
    </label>

    <fieldset>
      <legend>Sex</legend>
      <label>
        <input type="radio" name="sex" value="male"> Male
      </label>
      <label>
        <input type="radio" name="sex" value="female"> Female
      </label>
    </fieldset>

    <label> Weight
      <input type="number">
    </label>

    <label> Size
      <select name="size">
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="lare">Large</option>
      </select>
    </label>

    <label> Length
      <select name="length">
        <option value="short">Short</option>
        <option value="medium">Medium</option>
        <option value="long">Long</option>
      </select>
    </label>

    <fieldset>
      <legend>Coat</legend>
      <label>
        <input type="radio" name="coat" value="smooth"> Smooth
      </label>
      <label>
        <input type="radio" name="coat" value="thick"> Thick
      </label>
    </fieldset>

    <fieldset>
      <legend>Vaccinated</legend>
      <label>
        <input type="radio" name="vaccinated" value="true"> Yes
      </label>
      <label>
        <input type="radio" name="vaccinated" value="false"> No
      </label>
    </fieldset>

    <fieldset>
      <legend>Declawed (cats only)</legend>
      <label>
        <input type="radio" name="declawed" value="true"> Yes
      </label>
      <label>
        <input type="radio" name="declawed" value="false"> No
      </label>
    </fieldset>

    <fieldset>
      <legend>Color</legend>
      <label> Primary Color
        <input type="text" name="color">
      </label>
      <label> Secondary Color
        <input type="text" name="color">
      </label>
    </fieldset>

    <label> Description
      <textarea name="description" rows="5"></textarea>
    </label>

    <label>
      Shelter
      <select name="place">
        <option value="Brooklyn Animal Care Center">Brooklyn Animal Care Center</option>
        <option value="Manhattan Animal Care Center">Manhattan Animal Care Center</option>
        <option value="Staten Island Animal Care Center">Staten Island Animal Care Center</option>
      </select>
    </label>

    <label>
      Intake Date
      <input type="date" format="yyyy/dd/MM">
    </label>
  </form>
</main>
